<h2>ユーザ登録</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, label: "ユーザ名", required: true, autofocus: true %>
    <%= f.input :email, label: "email", required: true, autofocus: true %>
    <%= f.input :password, label: "パスワード", required: true, hint: ("最低#{@minimum_password_length}字" if @validatable) %>
    <%= f.input :password_confirmation,label: "確認用パスワード", required: true %>
  </div>
  <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">CAUTION:</span>会計関係者で無い限り、登録しないことをお勧めします。
  </div>

  <div class="form-actions">
      <%= f.button :submit, "登録", class:  "btn btn-danger"%>
  </div>
<% end %>

