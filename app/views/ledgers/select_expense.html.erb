<div class="col-lg-12">
<%= form_tag '/ledgers/add_expense', :class => "form-horizontal", :method => 'get' do %>
    <div class="form-group integer ledger_year">
        <%= label_tag :year, '申請年', :class => "year optional col-sm-3 control-label"  %>
        <div class="col-xs-3">
        <%= select_tag :year, options_for_select(@year), :class=>"year optional col-sm-3 form-control"%>
        </div>
    </div>
    <div class="form-group integer ledger_month">
        <%= label_tag :month, '申請月', :class => "month optional col-sm-3 control-label"  %>
        <div class="col-xs-3">
        <%= select_tag :month, options_for_select(1..12,:selected => Time.now.month), :class=>"month optional col-sm-3 form-control" %>
        </div>
    </div>
    <div class="form-group string ledger_group">
        <%= label_tag :group, '委員会', :class => "month optional col-sm-3 control-label"  %>
        <div class="col-xs-3">
        <%= select_tag :group, options_for_select(@groups),  :include_blank => true,
                                                   :class=>"month optional col-sm-3 form-control" %>
        </div>
    </div>
    <div class="col-xs-3">
        <%= submit_tag "入力に進む", :class => "btn  btn-primary", :name => nil %>
    </div>
<% end %>
</div>
