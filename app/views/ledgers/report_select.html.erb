<%- model_class = Ledger -%>
<div class="page-header">
  <h1>立替申請月別データ出力</h1>
</div>

<div class="col-lg-12">

    <%= form_tag output_ledgers_path(format: :xls), :class => "form-horizontal", method: :get do %>
    <div class="form-group integer ledger_year">
        <%= label_tag :year, '申請年', :class => "year optional col-sm-3 control-label"  %>
        <div class="col-xs-2">
            <%= select_tag :year, options_for_select(@years), :class => "year optional form-control" %>
        </div>
    </div>
    <div class="form-group integer ledger_month">
        <%= label_tag :month, '申請月', :class => "month optional col-sm-3 control-label"  %>
        <div class="col-xs-2">
            <%= select_tag :month, options_for_select(1..12,:selected => Time.now.month), :class => "date optional form-control" %>
        </div>
    </div>

        <%= submit_tag '出力', :class => "btn btn-primary" %>
    <% end %>

    <div class="page-header">
        <h1>グループ別データ出力</h1>
    </div>


    <%= form_tag output_ledgers_path(format: :xls), :class => "form-horizontal", method: :get do %>
    <div class="form-group integer ledger_year">
    <%= label_tag :year, '申請年', :class => "year optional col-sm-3 control-label"  %>
    <div class="col-xs-2">
        <%= select_tag :year, options_for_select(@years), :class => "year optional form-control" %>
    </div>
    </div>

    <div class="form-group string ledger_group">
        <%= label_tag :year, 'グループ', :class => "group optional col-sm-3 control-label"  %>
        <div class="col-xs-2">
            <%= select_tag :group, options_for_select(@groups), :class => "group optional form-control" %>
        </div>
    </div>

        <%= submit_tag 'グループ出力', :class => "btn btn-primary" %>
    <% end %>

    <div class="page-header">
        <h1>全データ出力</h1>
    </div>

    <%= form_tag output_ledgers_path(format: :xls), :class => "form-horizontal", method: :get do %>
        <div class="form-group integer ledger_year">
        <%= label_tag :year, '申請年', :class => "year optional col-sm-3 control-label"  %>
        <div class="col-xs-2">
            <%= select_tag :year, options_for_select(@years), :class => "year optional form-control" %>
        </div>
    </div>

    <%= submit_tag '全データ出力', :class => "btn btn-primary" %>
    <% end %>

    <div class="page-header">
        <h1>総会用支出データ出力</h1>
    </div>
    <div class="alert alert-danger" role="alert">注意：技術的・時間的な問題
        <ul>
            <li>収入の部は自力でやること</li>
            <li>執行率は自分で計算させる事(例:=IF(D1=0,"-",E1/D1))</li>
            <li>小計・総計も自分で計算させる事(各表に小計・総計あり。右下に繰越金計算などあり。)</li>
        </ul>
    </div>


    <%= form_tag meeting_output_ledgers_path(format: :xls), :class => "form-horizontal", method: :get do %>
        <div class="form-group integer ledger_year">
        <%= label_tag :year, '申請年', :class => "year optional col-sm-3 control-label"  %>
        <div class="col-xs-2">
            <%= select_tag :year, options_for_select(@years), :class => "year optional form-control" %>
        </div>
    </div>

    <%= submit_tag '総会支出資料出力', :class => "btn btn-primary" %>
    <% end %>

    <br/>
    <%= link_to 'CSV import', import_csv_new_ledgers_path, :class => "btn btn-warning"%>
</div>




