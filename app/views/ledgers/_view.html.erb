<%- model_class = Ledger -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:no) %></th>
      <th><%= "申請年"%></th>
      <% if defined? @search %>
      <th><%= sort_link @search, :month, "申請月" %></th>
      <th><%= sort_link @search, :processing, "処理日" %></th>
      <th><%= sort_link @search, :group, "委員会" %></th>
      <% else %>
      <th><%= "申請月" %></th>
      <th><%= "処理日" %></th>
      <th><%= "委員会" %></th>
      <% end %>
      <th><%= "立替者" %></th>
      <th><%= "項目" %></th>
      <th><%= "摘要" %></th>
      <th><%= "金額" %></th>
      <th><%= "備考" %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ledgers.each do |ledger| %>
      <tr>
        <td><%= ledger.no %></td>
        <td><%= ledger.year %></td>
        <td><%= ledger.month %></td>
        <td><%= link_to ledger.processing, ledger_path(ledger) %></td>
        <td><%= ledger.group %></td>
        <td><%= ledger.manager %></td>
        <td><%= ledger.item %></td>
        <td><%= ledger.resume %></td>
        <td><%= ledger.amount %></td>
        <td><%= ledger.note %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ledger_path(ledger), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ledger_path(ledger),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '削除しますか？')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

