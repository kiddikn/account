<%= simple_form_for @ledger,wrapper: "horizontal_form", :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :no        , :as => :hidden %>
    <%= f.input :year      , :as => :hidden  %>
    <%= f.input :month     , :as => :hidden %>
    <%= f.input :processing, label: @processing,input_wrapper_html: { class: "col-xs-2" } %>
    <%= f.input :group     , :as => :hidden %>
    <%= f.input :manager   , label: @manager, input_wrapper_html: { class: "col-xs-3" } %>
    <%= f.input :item      , label: "項目", input_wrapper_html: { class: "col-xs-3" },
        collection: @items_collect %>
    <%= f.input :resume    , label: "摘要", input_wrapper_html: { class: "col-xs-5" } %>
    <%= f.input :amount    , label: "金額", input_wrapper_html: { class: "col-xs-3" }, hint: "半角英数字で入力(,は入れない)" %>
    <%= f.input :note      , label: "備考", input_wrapper_html: { class: "col-xs-5" } %>

    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
         ledgers_path, :class => 'btn btn-default' %>

<% end %>


