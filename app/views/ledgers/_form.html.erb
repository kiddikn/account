<%= simple_form_for @ledger,wrapper: "horizontal_form", :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :no, input_wrapper_html: { class: "col-xs-2" } %>
    <%= f.input :year,  label: "処理年", collection: [2014],input_wrapper_html: { class: "col-xs-2" } %>
    <%= f.input :month, label: "処理月", collection: 1..12,input_wrapper_html: { class: "col-xs-2" } %>
    <%= f.input :processing, label: "立替日",input_wrapper_html: { class: "col-xs-2" } %>
    <%= f.input :group     , label: "グループ(委員会)", input_wrapper_html: { class: "col-xs-3" },
                           collection: [ "事務局", "パトロール", "コミュニティ", "スポーツ", "収入"] %>
    <%= f.input :manager   , label: "立替者", input_wrapper_html: { class: "col-xs-3" } %>
    <%= f.input :item      , label: "項目", input_wrapper_html: { class: "col-xs-3" },
        collection: ["収入", "イベント費","登録費","消耗品費","通信費","旅費交通費","保険料","雑費",
                     "備品","光熱費","機材","工具","修繕費",
                     "賃借料","補助金","支払手数料","在庫保持費","生活費","積立金","人件費",
                     "内部収入-内部支援金","内部収入-年会費","内部収入-物品販売金",
                     "内部収入-クラブ運営費","内部収入-利息","内部収入-スポーツ安全保険",
                     "外部収入-ガード委託料","外部収入-補助金","外部収入-JLA講習会残金",
                     "外部収入-JLA Jr.pg助成金","外部収入-鉾田市体協補助金","外部収入-外部謝礼金","その他"] %>
    <%= f.input :resume    , label: "摘要", input_wrapper_html: { class: "col-xs-5" } %>
    <%= f.input :amount    , label: "金額", input_wrapper_html: { class: "col-xs-3" }, hint: "半角英数字で入力(,を入れない)" %>
    <%= f.input :note      , label: "備考", input_wrapper_html: { class: "col-xs-5" } %>

    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
         ledgers_path, :class => 'btn btn-default' %>

<% end %>

